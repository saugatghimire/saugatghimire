<%= form_for(@blog) do |f| %>
  <% if @blog.errors.any? %>
    <div class="alert alert-danger">
      The form contains <%= pluralize(@blog.errors.count, "error") %>.
      <ul>
      <% @blog.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :body %><br />
    <%= f.text_area :body %>
  </p>
  <p>
    <%= f.label :tag_list %><br />
    <%= f.text_field :tag_list %>
  </p>
  <p>
    <%= f.submit 'Submit', class: "btn btn-large btn-default" %>
  </p>
<% end %>