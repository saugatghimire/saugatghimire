<!-- %= link_to "Post a Comment", '#', :onclick => 'document.getElementById(comment-form).style.display = "block"'% -->

<div id="comment-button" class="custom-link">Post a comment</div>

<div id="comment-form" class="hidden">
  <%= form_for [ @blog, @comment ] do |f| %>
    <% if @comment.errors.any? %>
      <div class="alert alert-danger">
        The form contains <%= pluralize(@comment.errors.count, "error") %>.
        <ul>
        <% @comment.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    <% end %>
    <p>
      <%= f.label :name %><br/>
      <%= f.text_field :name %>
    </p>
    <p>
      <%= f.label :email %><br/>
      <%= f.text_field :email %>
    </p>
    <p>
      <%= f.label :body %><br/>
      <%= f.text_area :body %>
    </p>
    <p>
      <%= f.submit 'Submit', class: "btn btn-large btn-default" %>
    </p>
  <% end %>
</div>